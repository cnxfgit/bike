<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".controller.activity.BorrowActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_back_pwdWidget"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="@drawable/selector_back_button"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#2196F3"
            android:text="请输入自行车号"
            android:textSize="14dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bfbfbf"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/bike1"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:layout_marginTop="20dp">
        <com.hlx.vbbike.utils.CustomPwdWidget
            android:id="@+id/pwdEdit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:passwordRadius="3dp"
            app:passwordColor="#8a8a8a"
            app:divisionLineSize="1dp"
            app:divisionLineColor="#8a8a8a"
            app:bgSize="1dp"
            app:bgColor="#D1D1D1"
            app:bgCorner="3dp"
            app:passwordNumber="4"
            app:isHide="false"
            android:background="@null"
            />
    </LinearLayout>

    <com.hlx.vbbike.utils.CustomKeyboard
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"></com.hlx.vbbike.utils.CustomKeyboard>

</LinearLayout>